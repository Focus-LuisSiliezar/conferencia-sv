---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import { getApiData } from "../../services/getApiData";
import { Esenciales } from "../../interfaces";
import AlternativeLayout from "../../layouts/AlternativeLayout.astro";
const esencials = await getApiData("esencials");
---

<AlternativeLayout title="Esenciales" sideBarActiveItemID="essencials">
  <div>
    <div class="text-3xl w-full font-bold mb-5 titles text-royal-blue">
      Essentials
    </div>
  </div>
  {
    esencials
      .filter(
        (filteredData: Esenciales) =>
          !filteredData?.attributes?.isGivenByUS
      )
      .map((esencial: Esenciales) => (
        <>
          <HorizontalCard
            title={esencial?.attributes?.tituloEN}
            desc={esencial?.attributes?.descripcionEN}
            img={esencial?.attributes?.foto.data?.attributes.url}
            isMandatory={!!esencial?.attributes?.isGivenByUS}
          />
          <div class="divider my-0" />
        </>
      ))
  }
 
  <div>
  </div>
  {
    esencials
      .filter(
        (filteredData: Esenciales) =>
          !!filteredData?.attributes?.isGivenByUS 
      )
      .map((esencial: Esenciales) => (
        <>
          <HorizontalCard
            title={esencial?.attributes?.tituloEN}
            desc={esencial?.attributes?.descripcionEN}
            img={esencial?.attributes?.foto.data?.attributes.url}
            isMandatory={!!esencial?.attributes?.isGivenByUS}
          />
          <div class="divider my-0" />
        </>
      ))
  }

</AlternativeLayout>
