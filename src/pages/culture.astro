---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getApiData } from "../services/getApiData";
import { Cultura } from "../interfaces";
const culturas = await getApiData("cultures");
---

<BaseLayout title="Cultura" sideBarActiveItemID="cultura">
  <div>
    <div class="text-3xl w-full font-bold mb-5 titles text-royal-blue">
      Cultura Rotaractiana
    </div>
  </div>
  <div>
    {
      culturas.map((cultura: Cultura) => (
        <>
          <HorizontalCard
            title={cultura?.attributes?.tituloES}
            desc={cultura?.attributes?.descripcionES}
            img={cultura?.attributes?.foto.data?.attributes.url}
          />
          <div class="divider my-0" />
        </>
      ))
    }
  </div>
</BaseLayout>
