---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
import { Image } from "@astrojs/image/components";
---

<BaseLayout title="Agenda" sideBarActiveItemID="agenda">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Agenda</div>
  </div>

  <!-- JUEVES -->
  <div id="jueves">
    <div class="my-5">
      <div class="text-2xl w-full font-semibold">Jueves</div>
    </div>
    <div class="time-line-container grid gap-4 mb-10">
      <TimeLineElement title="Check in Hotel" subtitle="12:00md -3:00pm" />
      <TimeLineElement
        title="Lounge sorpresa para early guests"
        subtitle="3:00pm - 5:30pm"
      />
      <TimeLineElement
        title="Traslado al hotel + arreglarse"
        subtitle="5:30pm - 7:30pm"
      />
      <TimeLineElement title="Cena de apertura" subtitle="7:30pm - 9:30pm">
        <b>Vestuario</b> Toga party: gods and goddesses
        <!-- <Image
          class="mask bg-base-200"
          format="png"
          width={500}
          height={500}
          fit="cover"
          src="/confe.svg"
          alt="Profile image"
        /> -->
      </TimeLineElement>
      <TimeLineElement
        title="Espacio para patrocinadores"
        subtitle="7:30pm - 8:00pm"
      />
      <TimeLineElement
        title="Rotasapiens/Rotaeinsteins"
        subtitle="9:30pm - 11:30pm"
      />
      <TimeLineElement title="Embajada" subtitle="11:30pm - 2:00am">
        <b>Vestuario</b> Carnaval Caribe√±o
      </TimeLineElement>
    </div>
  </div>

  <!-- Viernes -->
  <div id="viernes">
    <div class="my-5">
      <div class="text-2xl w-full font-semibold">Viernes</div>
    </div>
    <div class="time-line-container grid gap-4 mb-10">
      <TimeLineElement title="Desayuno" subtitle="6:00am - 8:00am" />
      <TimeLineElement
        title="Traslado a foto oficial"
        subtitle="8:00am - 9:30am"
      />
      <TimeLineElement title="Foto oficial" subtitle="9:30am - 10:30am" />
      <TimeLineElement
        title="Traslado a proyecto social"
        subtitle="10:30am - 11:00am"
      />
      <TimeLineElement title="Proyecto Social" subtitle="11:00am - 1:00pm" />
      <TimeLineElement title="Traslado hotel" subtitle="1:00pm - 2:15pm" />
      <TimeLineElement title="Tiempo de cambiarse" subtitle="2:15pm - 2:40pm" />
      <TimeLineElement
        title="Asamblea D4250 y D4240"
        subtitle="2:40pm - 5:10pm"
      />
      <TimeLineElement title="Break" subtitle="5:10pm - 5:25pm" />
      <TimeLineElement
        title="Tiempo libre + arreglarse"
        subtitle="5:25pm - 7:30pm"
      />
      <TimeLineElement title="Cena" subtitle="7:30pm - 9:00pm" />
      <TimeLineElement
        title="Miss Rotact y Rey Feo"
        subtitle="9:00pm - 10:00pm"
      />
      <TimeLineElement title="Embajada" subtitle="10:00pm - 12:00pm" />
    </div>
  </div>

  <!-- Sabado -->
  <div id="sabado">
    <div class="my-5">
      <div class="text-2xl w-full font-semibold">Sabado</div>
    </div>
    <div class="time-line-container grid gap-4 mb-10">
      <TimeLineElement title="Desayuno" subtitle="6:00am - 8:30am" />
      <TimeLineElement title="Conferencia 1" subtitle="8:30am - 9:30am" />
      <TimeLineElement title="Break" subtitle="9:30am - 9:55am" />
      <TimeLineElement title="Taller" subtitle="9:55am - 10:40am" />
      <TimeLineElement title="Almuerzo" subtitle="10:40am - 12:10md" />
      <TimeLineElement title="Tiempo Libre" subtitle="12:10md - 1:40pm" />
      <TimeLineElement title="Conferencia 2" subtitle="1:40pm - 2:40pm" />
      <TimeLineElement
        title="Traslado a dinamicas"
        subtitle="2:40pm - 3:10pm"
      />
      <TimeLineElement title="Dinamicas" subtitle="3:10pm - 5:10pm" />
      <TimeLineElement title="Traslado al hotel" subtitle="5:10pm - 5:40pm" />
      <TimeLineElement
        title="Tiempo Libre + arreglarse"
        subtitle="5:40pm - 7:40pm"
      />
      <TimeLineElement
        title="Cena de Clausura + charlas clausura"
        subtitle="7:40pm - 11:40pm"
      />
      <TimeLineElement title="Embajada" subtitle="11:40pm - 2:10am" />
    </div>
  </div>
  <!-- Domingo -->
  <div id="domingo">
    <div class="my-5">
      <div class="text-2xl w-full font-semibold">Domingo</div>
    </div>
    <div class="time-line-container grid gap-4 mb-10">
      <TimeLineElement title="Desayuno" subtitle="6:00am - 9:00am" />
      <TimeLineElement
        title="Checkout - Considerar late checkout"
        subtitle="9:00am - 12:00am"
      />
    </div>
  </div>
</BaseLayout>
