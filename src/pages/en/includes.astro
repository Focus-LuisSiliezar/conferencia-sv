---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import { getApiData } from "../../services/getApiData";
import { Esenciales } from "../../interfaces";
import AlternativeLayout from "../../layouts/AlternativeLayout.astro";
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../../i18n/utils";
import WeInclude from "../../includes.json";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);


---

<AlternativeLayout title="Includes" sideBarActiveItemID="includes">
  <div>
    <div class="text-3xl w-full font-bold mb-5 titles text-royal-blue">
      {t("nav.includes")}
    </div>
  </div>
  {
    WeInclude.map((esencial: any) => (
        <>
          <HorizontalCard
            title={esencial?.title_eng}
            img={esencial?.img}
          />
          <div class="divider my-0" />
        </>
      ))
  }
 
  <div>
  </div>
</AlternativeLayout>
